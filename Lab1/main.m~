function main()

    %% Exercise 1
    % Team: Harm Manders, Hannah Min
 
    %% Question 2
    a = imread( 'autumn.tif' );
    a = im2double( rgb2gray (a) );
    
    subplot( 2, 3, 1)
    hold on;
    plot( profile (a, 100, 100, 120, 120, 200, 'linear'), 'b');
    plot( profile (a, 100, 100, 120, 120, 200, 'nearest'), 'r');
    hold off;
    title('Question 2')
    xlabel('200 samples')
    
    % In pixelValue you can now use 'const', 'nearest' and 'modulo'
    % to define what kind of border you  want to generate.
    
    %% Question 3
    
    i = im2double(imread('cameraman.tif'));
    t = deg2rad(33);
    r = rotateImage(i, t, 'linear');
    rr = rotateImage(r, -t, 'linear');
    ib = addBorder(i, t);
    
    % Rem
    rr(isnan(rr)) = 0;
    diff = sum(sum(((ib - rr)^2)))
     
%      subplot(2,2,1)
%      imshow(i)
%      subplot(2,2,2)
%      imshow(r)
%      subplot(2,2,3)
%      imshow(rr)
%      subplot(2,2,4)
%      imshow(ib)
%      
    size(ib)
    size(rr)
    
    
end
